#!/usr/bin/env bash
# Init-style script to manage manage_my_process

PIDFILE="/var/run/my_process.pid"
SCRIPT_PATH="$(dirname "$0")/manage_my_process"

start_process() {
    nohup "$SCRIPT_PATH" >/dev/null 2>&1 &   # Detached background process
    echo $! > "$PIDFILE"
}

stop_process() {
    if [ -f "$PIDFILE" ]; then
        kill "$(cat "$PIDFILE")" 2>/dev/null
        rm -f "$PIDFILE"
    fi
}

case "$1" in
    start)
        start_process
        echo "manage_my_process started"
        ;;
    stop)
        stop_process
        echo "manage_my_process stopped"
        ;;
    restart)
        stop_process                # Stop silently
        start_process               # Start silently
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
